.weui-cell {
  padding: 15px;
}

.weui-label {
  width: 80px;
}

.page__bd {
  margin-bottom: calc(env(safe-area-inset-bottom) + 30px);
}

.user_head {
  text-align: center;
  margin: 30px;
}

.logout {
  font-size: 16px;
  color: orangered;
  text-align: center;
  position: fixed;
  left: 0;
  right: 0;
  bottom: 30px;
  padding-bottom: env(safe-area-inset-bottom);
}

.user_head image {
  width: 100px;
  height: 100px;
  border-radius: 100%;
  border: 1px solid #ddd;
}

.deleteHistory {
  font-size: 14px;
  color: orangered;
  text-align: center;
  margin-top: 20px;
  vertical-align: middle;
}

.deleteHistory i {
  vertical-align: middle;
}