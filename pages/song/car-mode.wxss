.car-mode {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  /* background-color: rgba(0, 0, 0, 0.5); */
  background-repeat: no-repeat;
  background-size: 100% 100%;
  /* backdrop-filter: blur(20px); */
  z-index: 30;
}
.car-mode::before{  
  content: ' ';
  position: fixed;
  filter: blur(2px);
  z-index: -1;
  /* background: url('http://www.zi-han.net.img.800cdn.com/theme/hplus/img/a3.jpg') no-repeat; */
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background-size: cover;
  overflow: hidden;
}

.car-mode-player {
  position: fixed;
  left: 20px;
  top: 80rpx;
  right: 20px;
  bottom: 20px;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  text-shadow: 0px 0px 10px rgba(0, 0, 0, 0.5);
  color: white;
}

.car-back {
  position: fixed;
  bottom: 80px;
  left: 20px;
  right: 20px;
  font-weight: bold;
  font-size: 18px;
}

.car-mode-tips {
  font-size: 14px;
  background-color: #fff;
  color: #000;
  font-weight: 300;
  position: fixed;
  left: 20px;
  right: 20px;
  bottom: 20px;
  font-weight: bold;
}

.car-mode-img {
  text-align: center;
}

.car-mode-img image {
  width: 160px;
  height: 160px;
  border-radius: 20px;
}

.car-mode-song {
  display: flex;
  flex-direction: column;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}


.car-mode-name {
  font-size: 32px;
  font-weight: bold;
  text-align: center;
}

.car-mode-singer {
  font-size: 20px;
  color: #eee;
}

.car-mode-lrc {
  font-size: 28px;
  text-align: left;
  white-space: pre-wrap;
}
